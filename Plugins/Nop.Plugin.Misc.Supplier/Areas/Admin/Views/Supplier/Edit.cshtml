@using Nop.Plugin.Misc.Supplier.Areas.Admin.Models
@model SupplierModel
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	ViewBag.PageTitle = T("Admin.Suppliers.EditSupplierDetails").Text;
	NopHtml.SetActiveMenuItemSystemName("Suppliers");
}

<form asp-controller="Supplier" asp-action="Edit" method="post">
 	<div class="content-header clearfix">
 		<h1 class="float-left">
 			@T("Admin.Suppliers.EditSupplierDetails") - @Model.Name
 			<small>
 				<i class="fas fa-arrow-circle-left"></i>
 				<a asp-action="Index">@T("Admin.Suppliers.BackToList")</a>
 			</small>
 		</h1>
 		<div class="float-right">
 			<button type="submit" name="save" class="btn btn-primary">
 				<i class="far fa-floppy-disk"></i>
 				@T("Admin.Common.Save")
 			</button>
 			<button type="submit" name="save-continue" class="btn btn-primary">
 				<i class="far fa-floppy-disk"></i>
 				@T("Admin.Common.SaveContinue")
 			</button>
 			<span id="supplier-delete" class="btn btn-danger">
 				<i class="far fa-trash-can"></i>
 				@T("Admin.Common.Delete")
 			</span>
 		</div>
 	</div>
	@await Html.PartialAsync("~/Plugins/Misc.Supplier/Areas/Admin/Views/Supplier/_CreateOrUpdate.cshtml", Model)
 </form>
 <nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="supplier-delete" />
